# Server Configuration
PORT=5000
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/recyclemydevice

# JWT Secret
JWT_SECRET=your_jwt_secret_key_here_change_in_production
JWT_EXPIRE=7d

# AWS Configuration
AWS_REGION=eu-west-2
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key

# AWS SES (Email Service)
AWS_SES_FROM_EMAIL=noreply@recyclemydevice.com
AWS_SES_VERIFIED_EMAIL=admin@recyclemydevice.com

# AWS S3 (File Storage)
AWS_S3_BUCKET_NAME=recyclemydevice-uploads
AWS_S3_REGION=eu-west-2

# Admin Configuration
# Comma-separated list of authorized admin emails for OTP login
ADMIN_EMAILS=admin@recyclemydevice.com,khushnoor@example.com,manager@recyclemydevice.com
ADMIN_EMAIL=admin@recyclemydevice.com

# Recycler Configuration
RECYCLER_DEFAULT_PASSWORD=Recycler@123

# File Upload
MAX_FILE_SIZE=5242880
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/jpg,image/webp

# Frontend URL
FRONTEND_URL=http://localhost:5173

# Recycler Portal URL
RECYCLER_PORTAL_URL=http://localhost:3000/recycler/login

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session Secret
SESSION_SECRET=your_session_secret_key_here_change_in_production

# Payment Gateway (Stripe)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# Payment Gateway (PayPal) - Optional Alternative
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_MODE=sandbox

# SMS Notifications (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Shipping/Courier API (Optional)
ROYAL_MAIL_API_KEY=your_royal_mail_api_key
ROYAL_MAIL_API_SECRET=your_royal_mail_api_secret

# Analytics & Tracking
GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X
MIXPANEL_TOKEN=your_mixpanel_token

# Cart Configuration
CART_EXPIRY_HOURS=24
MAX_CART_ITEMS=1
